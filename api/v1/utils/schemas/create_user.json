{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "create_user.json",
  "type": "object",

  "properties": {
    "firstName": {
      "type": "string", 
      "minLength": 1,
      "maxLength": 255
    }, 
    "lastName": {
      "type": "string", 
      "minLength": 1,
      "maxLength": 255
    },
    "email": {
      "type": "string",
      "format": "email" 
    },
    "password": {
      "type": "string",
      "format": "password",
      "minLength": 8,
      "maxLength": 255
    }, 
    "phone": {
      "type": "string"
    }
  },
  "additionalProperties": false,
  "required":  ["firstName", "lastName", "email", "password"]
}
